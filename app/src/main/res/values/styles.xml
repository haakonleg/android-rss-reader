<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="navIconColor">@color/black</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="toolbarTheme">@style/ActionBar</item>
        <item name="cardViewTheme">@style/CardView</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/lightgrey</item>
        <item name="navIconColor">@color/lightgrey</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="toolbarTheme">@style/ActionBarDark</item>
        <item name="cardViewTheme">@style/CardViewDark</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:title">@string/app_name</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ActionBarDark" parent="Widget.AppCompat.ActionBar">
        <item name="android:title">@string/app_name</item>
        <item name="titleTextColor">@color/lightgrey</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="CardView" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">5dp</item>
    </style>

    <style name="CardViewDark" parent="CardView">
        <item name="cardBackgroundColor">@color/black</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">5dp</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
